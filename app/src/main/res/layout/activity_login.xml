<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">


    <ImageView
        android:layout_width="258dp"
        android:layout_height="213dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_fitune_favicon" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="618dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="-100dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/long_button_white"
        >

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginBottom="150dp"-->
        <!--            android:fontFamily="@font/gmarketlight"-->
        <!--            android:lineSpacingExtra="8sp"-->
        <!--            android:text="-->
        <!--    오늘의 운동세포를 추천 받아\n-->
        <!--  매일매일 맞춤 운동을 진행하고  \n-->
        <!--            몸짱이 되어보세요 !"-->
        <!--            android:textSize="22sp"-->
        <!--            android:textStyle="bold" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="747dp"
            android:background="@drawable/bg_bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="250dp"
            android:fontFamily="@font/gmarketmedium"
            android:textColor="@color/default_text"
            android:text="@string/app_title"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="22dp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarketmedium"
                android:text="이메일"
                android:textColor="@color/default_text"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="240dp"
                android:layout_height="39dp"
                android:layout_marginStart="30dp"
                android:textSize="18dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center_vertical|start" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="22dp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarketmedium"
                android:text="비밀번호"
                android:textColor="@color/default_text"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/pwdEditText"
                android:layout_width="240dp"
                android:layout_height="39dp"
                android:layout_marginStart="10dp"
                android:textSize="18dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center_vertical|start" />
        </LinearLayout>

        <Button
            android:id="@+id/liLogin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:fontFamily="@font/gmarketmedium"
            android:onClick="goToSignUp"
            android:text="회원가입하기"
            android:textColor="@color/default_text"
            android:textSize="15sp"
            />


    </FrameLayout>

</LinearLayout>