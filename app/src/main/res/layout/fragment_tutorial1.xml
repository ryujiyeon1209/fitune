<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.Tutorial1Fragment">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="-100dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/long_button_white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="747dp"
            android:background="@drawable/bg_bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_tutorial_heart"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/ic_heartbeat"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="
스마트 워치를 착용 후\n
안정 상태를 취해주세요"
                android:fontFamily="@font/gmarketlight"
                android:textStyle="bold"
                android:lineSpacingExtra="17sp"
                android:textSize="25sp"
                android:layout_marginBottom="70dp"
                android:textColor="@color/none_selected_button"
                />

            <Button
                android:id="@+id/btn_tutorial1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음 (1/4)"
                android:backgroundTint="@color/button_bg"
                android:textColor="@color/black"
                android:fontFamily="@font/gmarketmedium"
                android:textSize="15sp"
                android:layout_gravity="center"
                />

        </LinearLayout>



    </FrameLayout>

</LinearLayout>