<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="50dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lv2"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/tv_click_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/gmarketmedium"
            android:layout_gravity="center"
            android:text="상대 이름"
            android:textColor="@color/default_text"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_user_lv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/gmarketmedium"
            android:text="레벨 : 2"
            android:textColor="@color/crown"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_user_bpm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/gmarketmedium"
            android:text="심박수 : 120"
            android:textColor="@color/bpm"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대결 시작"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</FrameLayout>