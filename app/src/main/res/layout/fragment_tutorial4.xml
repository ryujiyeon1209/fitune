<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.Tutorial4Fragment">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="-100dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/long_button_white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="747dp"
            android:background="@drawable/bg_bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_tutorial_heart"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ic_lv0" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름을 지어주세요 !"
                android:gravity="center"
                android:maxLength="13"
                android:textSize="25sp"
                android:fontFamily="@font/gmarketmedium"
                android:layout_marginBottom="70dp"
                android:layout_marginHorizontal="130dp"
                />

            <Button
                android:id="@+id/btn_tutorial4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:backgroundTint="@color/button_bg"
                android:textColor="@color/black"
                android:fontFamily="@font/gmarketmedium"
                android:textSize="15sp"
                android:layout_gravity="center"
                />

        </LinearLayout>



    </FrameLayout>

</LinearLayout>