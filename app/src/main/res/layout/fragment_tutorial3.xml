<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ExerciseResultFragment">

    <!-- 상단 제목  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="튜토리얼"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:fontFamily="@font/gmarketbold"
        android:textColor="@color/default_text"
        />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="-100dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/long_button_white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="747dp"
            android:background="@drawable/bg_bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="50dp"
            >

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_tutorial3Start"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:backgroundTint="@color/button_bg"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="3분 제자리 뛰기"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- 남은 시간 텍스트 -->
            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/remaining_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="남은 시간: 60초"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/gmarketmedium"
                android:layout_gravity="center"
                />

            <!-- ProgressBar -->
            <ProgressBar
                android:layout_marginTop="20dp"
                android:id="@+id/progress_bar_timer"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:max="60" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            </RelativeLayout>



            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/btn_tutorial3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동 심박수 저장하기 \n(3/4)"
                android:backgroundTint="@color/button_bg"
                android:textColor="@color/black"
                android:fontFamily="@font/gmarketmedium"
                android:textSize="15dp"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>